<Window x:Class="Tehtava2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="550" Width="346">
    <Grid Margin="-2,0,2,0">
        <WrapPanel HorizontalAlignment="Left" Height="149" Margin="10,10,0,0" VerticalAlignment="Top" Width="156">
            <TextBlock TextWrapping="Wrap" Text="Choose the game" Height="18" Width="156" TextAlignment="Right"/>
            <TextBlock TextWrapping="Wrap" Text="Number of drawns" Height="18" Width="156" TextAlignment="Right" RenderTransformOrigin="0.519,0.556"/>
            <Button Content="Draw" Width="129"/>
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Left" Height="148" Margin="174,10,0,0" VerticalAlignment="Top" Width="156">
            <Button Content="Clear" Width="129"/>
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Left" Height="341" Margin="10,164,0,0" VerticalAlignment="Top" Width="318">
            <TextBlock TextWrapping="Wrap" Text="TextBlock" Width="317" Height="32"/>
            <TextBox Height="277" TextWrapping="Wrap" Text="TextBox" Width="317"/>
            <Button Content="Close" Width="129"/>
        </WrapPanel>

    </Grid>
</Window>
